            root.manager.current = "IngameGreen" # 버튼이 눌렸을 때 넘어갈 화면 지정

        Video: # 버튼에 사용할 영상 설정
            source: "videos/greensky.mp4" # 사용할 영상의 위치
            size: "80dp", "150dp" # 영상의 크기
            size_hint: None, None
            state: "play" # 영상의 상태
            pos: root.width*0.7, root.height*0.58 # 영상의 위치
            options: {'eos' : 'loop'} # 영상의 재생이 끝나면 다시 시작하도록 루프 설정

