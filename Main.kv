SCManager:
    FirstScreen:
    EndingScreen:
    OptionScreen:
        OptionWidget:
    Ingame:
        Sheep:
    
    
<FirstScreen>:
    name: "First"
    
    size: "360dp","640dp"
    size_hint: None,None
    Image:
        source:"images/background2.png"
        
    Button:
        text: "go to sleep"
        size: "150dp","44dp"
        size_hint: None,None
        pos_hint: {"x" : .31 , "y" : .35}
        on_release:
            root.manager.current = "Ingame"
            root.play_music()

        Image:
            source: 'images/prototype-11.png'
            size: "180dp","60dp"
            pos: root.width*0.27, root.height*0.3395

        Image:
            source: 'images/prototype-12.png'
            size: "150dp", "150dp"
            pos: root.width*0.31, root.height*0.5

    Button:
        background_normal : "images/자산 3.png"
        size: "30dp","30dp"
        size_hint: None,None
        pos_hint: {"x" : 0.88 , "y" : .88}
        on_release:
            root.manager.transition.direction = 'left'
            root.manager.current = "Option"

    Button:
        background_normal : "images/s자산 6.png"
        size: "30dp","30dp"
        size_hint: None,None
        pos_hint: {"x" : 0.78 , "y" : .88}
        on_press: root.play_or_stop()
        

<Ingame>:
    name: "Ingame"
    
    size: "360dp","640dp"
    size_hint: None,None

    Video:
        source: "videos/bluesky.mp4"
        allow_stretch: True
        size: "360dp", "640dp"
        size_hint: None, None
        state: "play"
        options: {'eos' : 'loop'}

    Button:
        background_normal : "images/자산 3.png"
        size: "30dp","30dp"
        size_hint: None,None
        pos_hint: {"x" : 0.88 , "y" : .88}
        on_release:
            root.manager.transition.direction = 'left'
            root.manager.current = "Option"

    Button:
        background_normal : "images/s자산 6.png"
        size: "30dp","30dp"
        size_hint: None,None
        pos_hint: {"x" : 0.78 , "y" : .88}
        on_release: root.stop_music()
        

<EndingScreen>:
    name: "Ending"
    
    size: "360dp","640dp"
    size_hint: None,None
    Image:
        source:"images/background2.png"
        
    Button:
        text: "go home"
        size: "100dp","30dp"
        size_hint: None,None
        pos_hint: {"x" : .37 , "y" : .35}
        on_release: app.root.current = "First"


<OptionScreen>:
    name: "Option"
    
    size: "360dp","640dp"
    size_hint: None,None
    Image:
        source:"images/background2.png"
        
    Button:
        text: ""
        size: "30dp","30dp"
        size_hint: None,None
        pos_hint: {"x" : 0.88 , "y" : 0.88}
        on_release:
            root.manager.transition.direction = 'right'
            root.manager.current = "Ingame"

        Image:
            source: "images/backspace1.png"
            size: "30dp","30dp"
            pos: root.width*0.88, root.height*0.88

    ToggleButton:
        id: "music1"
        text: "1"
        size: "300dp","50dp"
        size_hint: None,None
        pos_hint: {"x" : 0.1 , "y" : 0.4}
        on_press: root.play1()

    ToggleButton:
        id: "2"
        text: "2"
        size: "300dp","50dp"
        size_hint: None,None
        pos_hint: {"x" : 0.1 , "y" : 0.3}
        on_press: root.play2()

    ToggleButton:
        id: "3"
        text: "3"
        size: "300dp","50dp"
        size_hint: None,None
        pos_hint: {"x" : 0.1 , "y" : 0.2}
        on_press: root.play3()

    ToggleButton:
        id: "4"
        text: "4"
        size: "300dp","50dp"
        size_hint: None,None
        pos_hint: {"x" : 0.1 , "y" : 0.1}
        on_press: root.play4()


<Music>:
    Button:
        id: music_button
        text: ""
        background_normal : "images/s자산 6.png"
        size: "30dp","30dp"
        size_hint: None,None
        pos_hint: {"x" : 0.78 , "y" : .88}
        on_press: root.play_or_stop()


<OptionWidget>:
    BoxLayout:
        orientation: "vertical"
        size: "320dp","300dp"
        size_hint: None,None
        pos_hint: {"center_x" : 0.9, "center_y" : 0.9}

        Image:
            source: "images/optionbackground.png"
            size: "120dp", "40dp"
            pos: root.width*0.05, root.height*0.8

    Button:
        text: "Blue Sky"
        size: "72dp","128dp"
        size_hint: None,None
        pos_hint: {"x" : 0.1 , "y" : 0.6}
