SCManager:
# 화면을 제어할 스크린 매니저를 사용하고, 제어할 화면들을 설정
    FirstScreen:
    OptionScreen:
    # 화면에서 main.py를 통해 불러올 요소를 설정정
        Music1:
        Music2:
        Music3:
        Music4:
    IngameBlue:
        Sheep:
    IngamePink:
        Sheep:
    IngameGreen:
        Sheep:
    
    
<FirstScreen>:
    name: "First"
    # 화면의 사이즈 설정 및 백그라운드 이미지 설정
    size: "360dp","640dp"
    size_hint: None,None
    Image:
        source:"images/background.png" # 불러올 이미지의 위치
  
    Button: # 인게임 화면으로 넘어가기 위한 버튼 생성
        text: "go to sleep"
        size: "150dp","33dp" # 버튼의 크기
        size_hint: None,None
        pos_hint: {"x" : .31 , "y" : .355} # 버튼의 위치
        on_release:
            root.manager.current = "IngameBlue"  # 버튼을 누르면 인게임 화면으로 넘어감

        Image: # 버튼의 이미지 설정
            source: 'images/prototype-11.png'
            size: "180dp","60dp" # 이미지의 크기
            pos: root.width*0.27, root.height*0.3395 # 이미지의 위치

        Video: # 게임 첫화면에  나올 게임의 로고 이미지 설정
            source: 'videos/logo.mp4'
            size: "150dp", "150dp"
            size_hint: None, None
            allow_stretch: True
            state: "play"
            options: {'eos' : 'loop'}
            pos: root.width*0.31, root.height*0.5

    Button: # 옵션 화면으로 넘어가기 위한 버튼 설정
        background_normal : "images/prototype-08.png"
        size: "30dp","30dp"
        size_hint: None,None
        pos_hint: {"x" : 0.88 , "y" : .88}
        on_release:
            root.manager.transition.direction = 'left' # 화면이 넘어갈 때 왼쪽으로 화면이 넘어가도록 설정
            root.manager.current = "Option" # 버튼을 눌렀을 때 넘어갈 화면 지정
        


<IngameBlue>:
    name: "IngameBlue"
    
    size: "360dp","640dp"
    size_hint: None,None

    Video: # 인게임 화면에 출력할 백그라운드 영상 설정
        source: "videos/bluesky.mp4" # 백그라운드 영상의 위치
        size: "360dp", "640dp" # 영상의 크기
        size_hint: None, None
        allow_stretch: True
        state: "play" # 영상의 상태
        options: {'eos' : 'loop'} # 영상의 재생이 끝나면 다시 시작하도록 루프 설정

    Button: # 인게임 화면으로 돌아가는 버튼 설정
        text: ""
        background_color: 0,0,0,0
