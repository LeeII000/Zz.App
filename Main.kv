        size_hint: None,None
        pos_hint: {"x" : 0.88 , "y" : .88} # 버튼의 위치
        on_release:
            root.manager.transition.direction = 'right' # 화면이 넘어갈 때 오른쪽으로 넘어가도록 설정
            root.manager.current = "First" # 버튼이 눌렸을 때 넘어갈 화면 지정

        Image: # 버튼에 사용할 이미지 설정
            source: "images/backspace.png" # 사용할 이미지의 위치
            size: "30dp","30dp" # 이미지의 크기
            pos: root.width*0.88, root.height*0.88 # 이미지의 위치
                

    Button: # 사운드 버튼 설정 
        background_normal : "images/s자산 6.png"
        size: "30dp","30dp"
        size_hint: None,None
        pos_hint: {"x" : 0.78 , "y" : .88}
        

